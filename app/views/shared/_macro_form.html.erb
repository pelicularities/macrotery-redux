<div class="row justify-content-center">
  <div class="col-12">
    <div class="macro_form">

      <%= simple_form_for @macro do |f| %>

      <%= f.input :name, label: 'Meal Of The Day' %>
        <%= f.input :protein, label: 'Protein Per Meal', placeholder: '0-200' %>



      <%= f.input :carbs, label: 'Carbs Per Meal', placeholder: '0-200' %>
      <%= f.input :fats, label: 'Fats Per Meal', placeholder: '0-200' %>

      <%= f.button :submit, "Save My Macros", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>
